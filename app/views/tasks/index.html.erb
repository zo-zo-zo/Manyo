<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク詳細</th>
    <th>終了期限</th>
    <th>状態</th>
    <th>優先順位</th>
  </tr>
<% @tasks.each do |task| %>
  <tr class = 'task_row'>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= task.created_at%></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '編集', edit_task_path(task.id) , data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete , data: { confirm: '本当に削除していいですか？' }%></td>
  </tr>
<% end %>
<%= link_to '新しくタスクを作成する', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
</table>
